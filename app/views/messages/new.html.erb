<section class='form-division'>
  <fieldset class='form_field'>
    <h2>Create the message </h2><br>
    <%= form_with model: [ @location, @location.messages.build ] do |form| %>
    <div>
      <div class="input-container">
        <%= form.label :title %>
        <%= form.text_field :title ,:size=>"35"%></div>
      <% @message.errors.full_messages_for(:title).each do |message| %>
      <div class="error"><%= message %></div>
      <% end %>
    </div><br>
    <div>
      <div class="input-container">
        <%= form.label :body %>
        <%= form.text_field :body  ,:size=>"35"%></div>
      <% @message.errors.full_messages_for(:body).each do |message| %>
      <div class="error"><%= message %></div>
      <% end %>
    </div><br>


    <div>
      <%= form.submit "Create!", :class => 'btn btn-primary js-scroll-trigger other_link' %>&nbsp;<button type="button" class='btn btn-primary js-scroll-trigger'> &nbsp;
        <% if @location.messages.exists? %>
        <%= link_to "Back", location_messages_path(@location), :class=>'other_link' %></button>
      <% else %>
      <%= link_to "Back", city_locations_path(@location.city.id), :class=>'other_link' %></button>
      <% end %>

    </div>


    <% end %>
  </fieldset>
</section>
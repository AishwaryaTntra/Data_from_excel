<section class='form-division'>
  <fieldset class='form_field'>
<h2>Create the message </h2><br>
<%= form_with model: @message, url: city_customer_message_path do |form| %>
  <div>
    <div class = "input-container">
      <%= form.label :title %>
      <%= form.text_field :title ,:size=>"35"%></div>
      <% if @message.present? %>
        <% @message.errors.full_messages_for(:title).each do |message| %>
        <div class = "error"><%= message %></div>
        <% end %>
      <% end %>
  </div><br>
  <div>
    <div class = "input-container">
      <%= form.label :body %>
      <%= form.text_field :body  ,:size=>"35"%></div>
      <% if @message.present? %>
        <% @message&.errors.full_messages_for(:body).each do |message| %>
        <div class = "error"><%= message %></div>
        <% end %>
      <% end %>
  </div><br>

    
  <div>
  <%= form.submit "Create!" , :class=>'btn btn-primary js-scroll-trigger other_link'%> &nbsp;
  <button type="button" ,
    class='btn btn-primary js-scroll-trigger'><%= link_to "Back", cities_path, :class => 'other_link' %></button>

  </div>
  
  
<% end %>
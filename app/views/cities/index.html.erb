<body>
  <h1 id = "city" >Cities</h1>
  <table aria-describedby = 'cities index table' >
  <thead>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
      <th>Locations</th>
      <th>Add location</th>
      <th>Message Customers</th>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
    <tr>
      <td><%= city.name %></td>
      <td><%= link_to "Edit", edit_city_path(city) %></td>
      <td><%= link_to "Destroy", city_path(city), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %></td>
      <td> <%= link_to 'View Locations', city_locations_path(city) %></td>
      <td> <%= link_to 'Add new location', new_city_location_path(city) %></td>
      <td> <%= link_to "Message #{city.name} Customers", new_city_customer_message_path(city) %></td>
    </tr>
    <% end %>
  </tbody>
 </table><br>

 <button type = "button" class="btn btn-primary js-scroll-trigger text-white"><%= link_to "New City", new_city_path, :class=>'other_link' %></button>&nbsp;
 <button type = "button" class="btn btn-primary js-scroll-trigger text-white"><%= link_to "Add New Users", new_data_import_path, :class=>'other_link' %></button>
 <button type = "button" class="btn btn-primary js-scroll-trigger text-white"><%= link_to "Back", root_path, :class=>'other_link' %></button>
</body>
